<% content_for :titulo do %>
  <br><br><br>
  <div style="display: flex; align-items: center; text-align: center;">
    <i class="material-icons small left grey" style="margin-right: 10px;">pets</i>
    <h2 style="margin-top: 4px; font-weight: 200; margin-bottom: 0;">&nbsp; Dar en adopción uno de mis Perros</h2>
  </div>
<% end %>

<% content_for :body do %>
   <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-9">
        <div class="card" style="border-radius:0;">
          <div class="card-content">
            <%= form_tag({ controller: 'adopcions', action: 'create_mi_perro' }, method: 'post') do %>
              <div class="d-flex justify-content-center align-items-center" style="margin-top:25px;">
                  <div class="field" style="margin-right:30px;">
                    <%= select_tag :perro_id, options_from_collection_for_select(@perros, 'id', 'nombre'), prompt: "Selecciona un perro" %>
                  </div>    
              </div>

              
              <div class="d-flex justify-content-center align-items-center" style="min-height: 100px;">
                <div class="actions">
                  <%= submit_tag 'Poner en adopción' , class: 'btn btn-primary', style: 'background-color: rgb(252, 145, 14); border: none; border-radius: 2px; width: 200px; height: 35px; letter-spacing: 0.5px; color: white;'%>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>
