<!-- 
    Esta vista es para editar las campa침as ya creadas
-->
<% content_for :titulo do %>
  <div style="display: flex; align-items: center; justify-content: center; margin-top: 50px;">
    <i class="material-icons small left grey" style="margin-right: 10px;">edit</i>
    <h2 style="margin-top: 4px; font-weight: 200;">Editar Campa침a </h2>
</div>
<% end %>

<% content_for :body do %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-11">
        <div class="card" style="border-radius:0;">
          <div class="card-content">
            <%= form_with(model: @campania, url: campania_donacion_path(@campania), method: :patch) do |form| %>
              
              <% if @campania.errors.any? %>
                <div class="alert alert-danger">
                  <h4><%= pluralize(@campania.errors.count, "error") %> prohibi칩 que esta campa침a se guarde:</h4>
                  <ul>
                    <% @campania.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="d-flex justify-content-center align-items-center">
                <div class="form-group" style="margin-right:20%;">
                  <div class="form-group">
                    <%= form.label :nombre %>
                    <%= form.text_field :nombre, class: 'form-control', style: 'width: 150%;' %>
                  </div>
                </div>
              </div>

              <div class="d-flex justify-content-center align-items-center">
                <div class="form-group" style="margin-top: 4%;">
                  <div class="form-group">
                    <%= form.label :fecha_final %>
                    <%= form.datetime_select :fecha_final, class: 'form-control' %>
                  </div>
                </div>
              </div>

              <div class="d-flex justify-content-center align-items-center">
                <div class="form-group" style="margin-top: 4%;">
                  <div class="form-group">
                    <%= form.label :monto_actual %>
                    <%= form.text_field :monto_actual, class: 'form-control', style: 'width: 200%;' %>
                  </div>
                </div>
              </div>

              <div class="d-flex justify-content-center align-items-center">
                <div class="form-group" style="margin-top: 4%;">
                  <div class="form-group">
                    <%= form.label :monto_objetivo %>
                    <%= form.text_field :monto_objetivo, class: 'form-control', style: 'width: 200%;' %>
                  </div>
                </div>
              </div>

              <div class="form-group" style="margin-top: 3%;">
                <%= form.label :descripcion, style: 'margin-left:10%;' %>
                <%= form.text_area :descripcion, class: 'form-control', style: 'width:80%; margin-left:10%;' %>
              </div>

              <div class="d-flex justify-content-center align-items-center">
                <div class="form-group" style="margin-top:4%;">
                  <%= form.submit 'Guardar Cambios', class: 'btn btn-primary', class: 'btn btn-primary', style: 'background-color: rgb(28, 150, 174); border: none; border-radius: 2px; width: 200px; height: 35px; letter-spacing: 0.5px; color: white;' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

    <%= link_to 'Cancelar', vista_veterinario_path, class: 'btn btn-secondary' %>

<% end %>

